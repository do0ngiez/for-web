  <div class="container">

        <h1 class="mt-4">
          <%- title %>
        </h1>
        <p class="color-adduOrange">
          <b>Change or update the user details.</b>
          <br>
          * Use <i>filter data</i> button to seek specific users through their status, date of contact, or if they have a positive history.
        </p>

        <div>
          <div class="row">
            <div class="col-md-3">
              <label for="fromDateFilter">Positive History Date</label>
              <div class="input-group input-daterange">
                <input type="text" class="form-control" id="fromDateFilter" value="">
                <div class="input-group-prepend input-group-append">
                  <span class="input-group-text">to</span>
                </div>
                <input type="text" class="form-control" id="toDateFilter" value="">
              </div>
            </div>
            <div class="col-md-3">
              <button class="btn btn-orange-addu" style=" margin-top: 2rem" id="filterButton">Filter Data</button>
            </div>
          </div>
        </div>

        <br />

        <table id="myTable" class="table table-hover table-bordered">
          <thead class="bg-addu">
            <tr>
              <th class="d-none">Id</th>
              <th scope="col">Full Name</th>
              <th scope="col">Date of History</th>
              <!-- <th scope="col">Status</th> -->
            </tr>
          </thead>
          <tbody>
            <% positiveusers.forEach(positiveHistory=> { %>
              <tr>
                <td class="d-none">
                  <%= positiveHistory.id %>
                </td>
                <td>
                  <%= positiveHistory.firstName %>
                    <%= positiveHistory.lastName %>
                </td>
                <td>
                  <%= new Date((new Date(positiveHistory.timeStamp._seconds * 1000)).getTime() - ((new Date(positiveHistory.timeStamp._seconds * 1000)).getTimezoneOffset() * 60000)).toISOString().substring(0, 10) %>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>
      </div>
  

